<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".productoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3F51B5"
        android:backgroundTint="#3F51B5"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50pt"
            android:text="Registro Productos"
            android:textSize="20pt" />

        <EditText
            android:id="@+id/etcodigoProducto"
            android:layout_width="150pt"
            android:layout_height="20pt"
            android:hint="CÃ³digo del Producto"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/etnombreProducto"
            android:layout_width="150pt"
            android:layout_height="20pt"
            android:layout_marginVertical="5pt"
            android:hint="Nombre del Producto"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/etStockProducto"
            android:layout_width="150pt"
            android:layout_height="20pt"
            android:layout_marginVertical="5pt"
            android:hint="Stock del Producto"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/etPrecioCosto"
            android:layout_width="150pt"
            android:layout_height="20pt"
            android:hint="Precio costo del Producto"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/etPrecioVenta"
            android:layout_width="150pt"
            android:layout_height="20pt"
            android:layout_marginTop="5pt"
            android:hint="Precio venta del Producto"
            android:textStyle="italic" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80pt">

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15pt"
                android:layout_marginTop="10pt"
                android:text="Guardar" />

            <Button
                android:id="@+id/btnBuscar"
                android:layout_width="122dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15pt"
                android:layout_marginTop="30pt"
                android:text="Buscar" />

            <Button
                android:id="@+id/btnActualizar"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="108dp"
                android:layout_marginLeft="50pt"
                android:layout_marginTop="10pt"
                android:layout_toEndOf="@+id/btnGuardar"
                android:text="Actualizar" />

            <Button
                android:id="@+id/btnBorrar"
                android:layout_width="116dp"
                android:layout_height="wrap_content"

                android:layout_marginStart="110dp"
                android:layout_marginLeft="50pt"
                android:layout_marginTop="30pt"
                android:layout_toEndOf="@+id/btnBuscar"
                android:text="Borrar" />

            <Button
                android:id="@+id/btnRegresar"
                android:layout_width="122dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="68pt"
                android:layout_marginTop="50pt"
                android:text="Regresar" />


        </RelativeLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>